@using EcommerceWebsite.Models.ViewModels
@model CartItemViewModel
@{
    ViewData["Title"] = "Gio Hang";
    Layout = "~/Views/Shared/_LayoutOgani.cshtml";
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Shopping Cart</h2>
                    <div class="breadcrumb__option">
                        <a href="./index.html">Home</a>
                        <span>Shopping Cart</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Products</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.CartItems.Count > 0)
                            {

                                @foreach (var item in Model.CartItems)
                                {
                                    <tr>
                                        <td class="shoping__cart__item">
                                            <img style="width:100px" src="@Url.Content("../ProductImages/" + item.Image)" alt="">
                                            <h5>@item.ProductName</h5>
                                        </td>
                                        <td class="shoping__cart__price">
                                            @item.Price
                                        </td>
                                        <td class="shoping__cart__quantity">
                                            <div class="quantity">
                                                <div class="btn-group" role="group" aria-label="Basic example">
                                                    <a asp-controller="Cart" asp-action="Decrease" asp-route-masp="@item.ProductId" class="btn btn-danger">-</a>
                                                    <input style="width:35px; text-align:center; border="none" type="text" value="@item.Quantity">
                                                    <a asp-controller="Cart" asp-action="Increase" asp-route-masp="@item.ProductId" class="btn btn-success">+</a>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="shoping__cart__total">
                                            @Model.CartItems.Where(x => x.ProductId == item.ProductId).Sum(x => x.Quantity * x.Price).ToString()
                                        </td>
                                        <td class="shoping__cart__item__close">
                                            <a asp-controller="Cart" asp-action="Remove" asp-route-masp="@item.ProductId"><span class="icon_close"></span></a>
                                        </td>
                                    </tr>
                                }

                            }
                            else
                            {
                                <tr>
                                    <td colspan="5"><h4 style="text-align: left">triong</h4></td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__btns">
                    <a asp-controller="Home" asp-action="Index" class="primary-btn cart-btn">CONTINUE SHOPPING</a>
                    <a asp-controller="Cart" asp-action="Clear" class="btn btn-danger cart-btn">CLEAR CART</a>
                    <a href="#" class="primary-btn cart-btn cart-btn-right">
                        <span class="icon_loading"></span>
                        Upadate Cart
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__continue">
                    <div class="shoping__discount">
                        <h5>Discount Codes</h5>
                        <form action="#">
                            <input type="text" placeholder="Enter your coupon code">
                            <button type="submit" class="site-btn">APPLY COUPON</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__checkout">
                    <h5>Cart Total</h5>
                    <ul>
                        <li>Subtotal <span></span></li>
                        <li>Total <span>@Model.GrandTotal.ToString()</span></li>
                    </ul>
                    <a href="#" class="primary-btn">PROCEED TO CHECKOUT</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shoping Cart Section End -->